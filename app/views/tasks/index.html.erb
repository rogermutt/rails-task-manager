<h1 class="title">Index HTML</h1>

<% @tasks.each do |task| %>

  <%= link_to task.title, task_path(task) %>
  <br>
    <% if task.completed %>
        <input type="checkbox" name="completed" checked>
       <% else %>
       <input type="checkbox" name="completed">
    <% end %>
  <br>
<% end %>

<br>
<br>

<%= link_to 'Add task', '/new' %>
